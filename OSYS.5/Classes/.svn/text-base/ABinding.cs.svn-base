namespace VesselTracking.Classes
{
    public class ABinding : Attribute
    {
        public ABinding(string header, Type dataGridColumnType, Type converterType, string converterParameter, string converterFallBackValue)
        {
            Header = header;
            DataGridColumnType = dataGridColumnType;
            ConverterType = converterType;
            ConverterParameter = converterParameter;
            ConverterFallBackValue = converterFallBackValue;
        }


        public string Header { get; set; }
        public Type DataGridColumnType { get; set; }
        public Type ConverterType { get; set; }
        public string ConverterParameter { get; set; }
        public string ConverterFallBackValue { get; set; }
    }
}
