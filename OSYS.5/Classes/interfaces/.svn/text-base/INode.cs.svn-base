        [ABinding("Current", typeof(DataGridTextColumn), typeof(ConverterDouble), "0.0 A", "-")]
        double Current { get; set; }

        [ABinding("Transmit Power", typeof(DataGridTextColumn), typeof(ConverterDouble), "0.0 W", "-")]
        double TransmitPower { get; set; }

        [ABinding("Node Age", typeof(DataGridTextColumn), typeof(ConverterInt), "0,0 min", "-")]
