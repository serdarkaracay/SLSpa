namespace VesselTracking.Classes
{
    public interface INode
    {
        [ABinding("Node ID", typeof(DataGridTextColumn), null, "", "-")]
        int NodeID { get; set; }

        [ABinding("MMSI", typeof(DataGridTextColumn), null, "", "-")]
        int MMSI { get; set; }

        [ABinding("Name", typeof(DataGridTextColumn), null, "", "-")]
        string Name { get; set; }

        [ABinding("Report Date", typeof(DataGridTextColumn), typeof(ConverterDateTime), "", "-")]
        DateTime ReportDate { get; set; }

        [ABinding("Position", typeof(DataGridTextColumn), typeof(ConverterLatLong), "", "-")]
        Point LatLong { get; set; }

        [ABinding("Default Position", typeof(DataGridTextColumn), typeof(ConverterLatLong), "", "-")]
        Point DefaultLatLong { get; set; }

        [ABinding("via Media", typeof(DataGridTextColumn), null, "", "-")]
        string ViaMedia { get; set; }

        [ABinding("Voltage", typeof(DataGridTextColumn), typeof(ConverterDouble ), "0.0 V", "-")]
