<UserControl x:Class="OSYS.Controls.LblHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="30" d:DesignWidth="350">

    <Grid x:Name="LayoutRoot" Height="40">
        <TextBlock x:Name="lblText" TextWrapping="Wrap" Text="TEXT" FontSize="18.667" FontWeight="Bold" Foreground="White" Height="40" FontFamily="Microsoft Sans Serif"/>
    </Grid>
</UserControl>
