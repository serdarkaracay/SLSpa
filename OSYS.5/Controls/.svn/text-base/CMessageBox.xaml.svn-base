<UserControl x:Class="VesselTracking.CMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VesselTracking"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ImageBrush x:Key="le" ImageSource="../Images/le.png" />
        <ImageBrush x:Key="li" ImageSource="../Images/li.png" />
        <ImageBrush x:Key="lw" ImageSource="../Images/lw.png" />
        <ImageBrush x:Key="lq" ImageSource="../Images/lq.png" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Rectangle d:IsHidden="True"
                   Fill="Black"
                   Opacity="0.75"
                   RadiusX="3"
                   RadiusY="3" />
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Rectangle Fill="Black"
                       Opacity="0.75"
                       RadiusX="10"
                       RadiusY="10"
                       StrokeThickness="0" />
            <StackPanel Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical"
                        d:LayoutOverrides="Height">
                <Grid x:Name="gridControls"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" />
                <Grid x:Name="gridIcons"
                      Width="64"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Center">
                    <Image x:Name="image"
                           Height="64"
                           VerticalAlignment="Top" />
                    <local:CircularProgress x:Name="progress1"
                                            Width="64"
                                            Height="64"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Visibility="Collapsed"
                                            d:LayoutOverrides="VerticalAlignment" />
                    <local:UserControl1 x:Name="progress" />
                </Grid>
                <TextBlock x:Name="textBlock"
                           MaxWidth="400"
                           Margin="20,20,20,10"
                           HorizontalAlignment="Center"
                           FontSize="14"
                           Foreground="#FFF3F3F3"
                           Text="Really want to log off?"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <Grid x:Name="gridButtons"
                      Margin="0,10"
                      HorizontalAlignment="Center">
                    <StackPanel x:Name="gridYesNo"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                d:IsHidden="True"
                                Orientation="Horizontal">
                        <Button x:Name="btnYes"
                                Width="72"
                                Height="22"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Left"
                                Click="btnLogon_Click"
                                Content="Yes"
                                Style="{StaticResource ButtonStyle2}"
                                d:LayoutOverrides="Height">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Offset="1" Color="#FF043700" />
                                    <GradientStop Color="#FF0FC400" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btnNo"
                                Width="72"
                                Height="22"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                Click="btnLogon_Copy_Click"
                                Content="No"
                                Style="{StaticResource ButtonStyle2}"
                                d:LayoutOverrides="Height">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Offset="1" Color="#FF3D0000" />
                                    <GradientStop Color="#FFC40000" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                    <Grid x:Name="gridOk"
                          Margin="95,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Bottom"
                          d:IsHidden="True">
                        <Button x:Name="btnOk"
                                Width="72"
                                Height="22"
                                HorizontalAlignment="Center"
                                Click="btnOk_Click"
                                Content="Ok"
                                Style="{StaticResource ButtonStyle2}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Offset="1" Color="#FF000D54" />
                                    <GradientStop Color="#FF0528EB" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <StackPanel x:Name="gridOkCancel"
                                Margin="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <Button x:Name="btnOk1"
                                Width="72"
                                Height="22"
                                HorizontalAlignment="Center"
                                Click="btnOk_Click"
                                Content="Ok"
                                Style="{StaticResource ButtonStyle2}"
                                d:LayoutOverrides="Height">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Offset="1" Color="#FF000D54" />
                                    <GradientStop Color="#FF0528EB" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btnCancel"
                                Width="72"
                                Height="22"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                Click="btnCancel_Click"
                                Content="Cancel"
                                Style="{StaticResource ButtonStyle2}"
                                d:LayoutOverrides="Height">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Offset="1" Color="#FF3D0000" />
                                    <GradientStop Color="#FFC40000" />
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>