<UserControl x:Name="userControl" x:Class="VesselTracking.MapItemInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bb="clr-namespace:VesselTracking.Classes"
             mc:Ignorable="d" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" Loaded="UserControl_Loaded" Height="146" Width="172">
    <UserControl.Resources>
        <bb:ConverterDateTime x:Key="DateTimeFormat"/>
        <bb:ConverterDouble  x:Key="DoubleFormat"/>
        <bb:ConverterInt x:Key="IntFormat"/>
        
        
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Rectangle HorizontalAlignment="Left" Name="rectangle1" StrokeThickness="1" Width="160" Fill="#97000000" RadiusX="3" RadiusY="3" Margin="0,0,0,12" >
        	<Rectangle.Effect>
        		<DropShadowEffect ShadowDepth="8" BlurRadius="13"/>
        	</Rectangle.Effect>
        </Rectangle>
    <sdk:Label Height="22" HorizontalAlignment="Left" Margin="12,4,0,0" x:Name="lblMMSI" VerticalAlignment="Top"  Width="136" FontSize="13.333" Foreground="#FFFFFF14" FontWeight="Bold" Content="{Binding MapItem.MMSI, ElementName=userControl, FallbackValue=-}" />
        <sdk:Label Height="22" HorizontalAlignment="Left" Margin="12,22,0,0" x:Name="lblName"  VerticalAlignment="Top" Width="136" FontSize="13.333" Foreground="#FFFFB227" FontWeight="Bold" Content="{Binding MapItem.Name, ElementName=userControl, FallbackValue=-}" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="19,48,0,0" Name="label3"  VerticalAlignment="Top" Width="32" d:LayoutOverrides="HorizontalAlignment" Foreground="#FFFBFBFB" Content="SOG" FontSize="8" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="48,48,0,0" x:Name="lblSOG"  VerticalAlignment="Top" Width="102" Foreground="#FFA1A1A1" FontSize="9.333" Content="{Binding MapItem.SOG, ConverterParameter=0.00 kn, Converter={StaticResource DoubleFormat}, ElementName=userControl, FallbackValue=-}" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="19,65,0,0" x:Name="label3_Copy"  VerticalAlignment="Top" Width="32" Foreground="#FFFBFBFB" Content="COG" d:LayoutOverrides="HorizontalAlignment" FontSize="8" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="48,65,0,0" x:Name="lblCOG"  VerticalAlignment="Top" Width="102" Foreground="#FFA1A1A1" FontSize="9.333" Content="{Binding MapItem.COG, ConverterParameter=0 °, Converter={StaticResource DoubleFormat}, ElementName=userControl, FallbackValue=-}" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="19,82,0,0" x:Name="label3_Copy1"  VerticalAlignment="Top" Width="32" Foreground="#FFFBFBFB" Content="HDG" d:LayoutOverrides="HorizontalAlignment" FontSize="8" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="48,82,0,0" x:Name="lblHDG"  VerticalAlignment="Top" Width="102" Foreground="#FFA1A1A1" FontSize="9.333" Content="{Binding MapItem.HDG, ConverterParameter=0 °, Converter={StaticResource DoubleFormat}, ElementName=userControl, FallbackValue=-}" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="19,99,0,0" x:Name="label3_Copy2"  VerticalAlignment="Top" Width="32" Foreground="#FFFBFBFB" Content="ROT" d:LayoutOverrides="HorizontalAlignment" FontSize="8" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="48,99,0,0" x:Name="lblROT"  VerticalAlignment="Top" Width="102" Foreground="#FFA1A1A1" FontSize="9.333" Content="{Binding MapItem.ROT, ElementName=userControl, FallbackValue=-}" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="19,116,0,0" x:Name="label3_Copy3"  VerticalAlignment="Top" Width="32" Foreground="#FFFBFBFB" Content="Time" d:LayoutOverrides="HorizontalAlignment" FontSize="8" />
        <sdk:Label Height="15" HorizontalAlignment="Left" Margin="48,116,0,0" x:Name="lblTime"  VerticalAlignment="Top" Width="102" Foreground="#FFA1A1A1" FontSize="9.333" Content="{Binding MapItem.ReportDate, ConverterParameter=HH:mm:ss, Converter={StaticResource DateTimeFormat}, ElementName=userControl, FallbackValue=-}" />
    </Grid>
</UserControl>
